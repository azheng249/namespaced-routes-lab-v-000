<h1>Settings</h1>

<%= form_for @preference, url: admin_settings_path(@preference) do |f| %>

  <%= f.label :artist_sort_order %><br>
  Ascending: <%= f.radio_button :artist_sort_order, "ASC"%>
  Descending: <%= f.radio_button :artist_sort_order, "DESC"%><br><br>

  <%= f.label :song_sort_order %><br>
  Ascending: <%= f.radio_button :song_sort_order, "ASC"%>
  Descending: <%= f.radio_button :song_sort_order, "DESC"%><br><br>

  <%= f.submit "Submit Preferences" %>
<% end %>